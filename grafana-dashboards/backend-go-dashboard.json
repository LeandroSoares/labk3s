{
  "dashboard": {
    "id": null,
    "uid": null,
    "title": "Backend Go - Métricas",
    "tags": ["backend", "go", "api"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "type": "graph",
        "title": "Requisições por segundo",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_total{service=\"joke-api-go\"}[1m]))",
            "legendFormat": "Total",
            "interval": ""
          }
        ],
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8}
      },
      {
        "type": "graph",
        "title": "Latência média das requisições",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "avg(http_server_request_duration_seconds_sum{service=\"joke-api-go\"}) / avg(http_server_request_duration_seconds_count{service=\"joke-api-go\"})",
            "legendFormat": "Latência Média (s)",
            "interval": ""
          }
        ],
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8}
      },
      {
        "type": "graph",
        "title": "Erros por segundo",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_total{service=\"joke-api-go\",status=~\"5..\"}[1m]))",
            "legendFormat": "Erros 5xx",
            "interval": ""
          }
        ],
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8}
      },
      {
        "type": "graph",
        "title": "Uso de CPU do Pod",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{pod=~\"backend-go.*\"}[1m])) by (pod)",
            "legendFormat": "{{pod}}",
            "interval": ""
          }
        ],
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8}
      },
      {
        "type": "graph",
        "title": "Uso de Memória do Pod",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{pod=~\"backend-go.*\"}) by (pod)",
            "legendFormat": "{{pod}}",
            "interval": ""
          }
        ],
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8}
      }
    ],
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    }
  }
}
