# Exemplo de valores locais para o Terraform
# Copie este arquivo para terraform.tfvars e personalize conforme necessário

# Configuração do cluster K3s
kube_config_path = "~/.kube/config"

# Configurações de namespace
namespace = "observability"

# Configurações do Grafana
grafana_enabled = true
grafana_service_type = "ClusterIP"
expose_grafana = true
grafana_nodeport = 30080
grafana_admin_password = "admin@123"  # Altere para uma senha segura em ambiente de produção

# Versões
prometheus_stack_version = "45.27.2"
